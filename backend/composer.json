{
    "name": "mo-backend-template",
    "description": "admin-panel-skeleton",
    "version": "1.0.0",
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "friendsofsymfony/rest-bundle": "^2.3",
        "jms/serializer-bundle": "^2.4",
        "monolog/monolog": "^1.23",
        "sensio/framework-extra-bundle": "^5.2",
        "slim/slim": "^3.10",
        "swiftmailer/swiftmailer": "6.1.3",
        "symfony/console": "^4.1",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^4.1",
        "symfony/maker-bundle": "^1.6",
        "symfony/options-resolver": "^4.1",
        "symfony/orm-pack": "^1.0",
        "symfony/yaml": "^4.1",
        "tuupola/cors-middleware": "0.9.0"
    },
    "require-dev": {
        "maxorlovsky/commit-msg-php": "0.1.0",
        "sensiolabs/security-checker": "^5.0",
        "symfony/dotenv": "^4.1",
        "symfony/profiler-pack": "^1.0",
        "symfony/web-server-bundle": "^4.1"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "commit-msg": {
            "types": [
                "feat",
                "fix",
                "chore",
                "docs",
                "refactor",
                "style",
                "perf",
                "test",
                "revert"
            ],
            "lineLength": 72,
            "scope": {
                "mandatory": false,
                "rules": ""
            }
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "security-checker security:check": "script"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "server:start": "bin/console server:start 0.0.0.0:9000 --ansi",
        "server:stop": "bin/console server:stop --ansi",
        "migrate": "bin/console doctrine:migration:migrate --ansi",
        "migrate:create": "bin/console make:migration --ansi",
        "schema:update": "bin/console doctrine:schema:update",
        "schema:update:d": "bin/console doctrine:schema:update --dump-sql",
        "schema:update:f": "bin/console doctrine:schema:update --force",
        "release": "git pull && php composer.phar install && php composer.phar --no-interaction migrate --ansi"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false
        }
    }
}